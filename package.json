{
	"name": "@lesjoursfr/audio-waveform",
	"version": "4.0.0",
	"description": "A library to generate waveform for audio files.",
	"license": "MIT",
	"repository": "lesjoursfr/audio-waveform",
	"homepage": "https://github.com/lesjoursfr/audio-waveform#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/audio-waveform/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "22.x || 24.x"
	},
	"keywords": [
		"waveform",
		"generator",
		"audio"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc && cp -R src/audio-analyzer lib",
		"test": "mocha"
	},
	"dependencies": {
		"electron": "^39.0.0",
		"mime-types": "^3.0.1",
		"uuid": "^11.1.0",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/mime-types": "^3.0.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.1",
		"@types/yargs": "^17.0.34",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.4.0",
		"mocha": "^11.7.4",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2"
	},
	"dependenciesMeta": {
		"electron": {
			"built": true
		}
	},
	"packageManager": "yarn@4.10.3"
}
